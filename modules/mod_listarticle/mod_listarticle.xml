<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5.0" method="upgrade">


    <name>mod_listarticle</name>

    <creationDate>November 2013</creationDate>
    <author>Alyona Gavrylei</author>
    <authorEmail>G_M_Alena@ukr.net</authorEmail>


    <version>1.0</version>

    <description>MOD_LISTARTICLE_XML_DESCRIPTION</description>


    <files>
        <filename module="mod_listarticle">mod_listarticle.php</filename>
        <folder>tmpl</folder>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
        <filename>mod_listarticle.xml</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
    </files>
      <config>
       <fields name="params">
         <fieldset name="basic">

           <field name="mycategory" type="category" extension="com_content" label="Select a category" description="" />

           <field name="count" type="text" default="4" label="Quantity of articles" description="Quantity of articles to watch" />

           <field name="mytimezone" type="timezone" default="" label="Select a timezone" description="" />

           <field name="mycalendar" type="calendar" default="17-11-2013" label="Select a date" description="" format="%d-%m-%Y" />



    </fieldset>
   </fields>
  </config>


</extension>